[
  {
    "name": "rails-form-training",
    "image": "477438465448.dkr.ecr.ap-northeast-1.amazonaws.com/rails-form-training/prd:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "nginx",
        "awslogs-group": "/ecs/rails-form-training"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "SECRET_KEY_BASE",
        "valueFrom": "/rails-form-training/prd/SECRET_KEY_BASE"
      },
      {
        "name": "DATABASE_HOSTNAME",
        "valueFrom": "/rails-form-training/prd/db_host"
      },
      {
        "name": "DATABASE_PASSWORD",
        "valueFrom": "/rails-form-training/prd/db_password"
      },
      {
        "name": "DATABASE_USERNAME",
        "valueFrom": "/rails-form-training/prd/db_user"
      },
      {
        "name": "DATABASE_NAME",
        "valueFrom": "/rails-form-training/prd/db_name"
      },
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "/rails-form-training/prd/aws_access_key_id"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "/rails-form-training/prd/aws_secret_access_key"
      }
    ],
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ]
  }
]